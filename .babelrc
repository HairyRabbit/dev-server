{
  "presets": [
    "@babel/preset-flow",
    ["@babel/preset-env", {
      "targets": {
        "node": true
      },
      "modules": false,
      "loose": true
    }]],
  "plugins": [
    ["@babel/plugin-proposal-class-properties", {
      "loose": true
    }],
    ["@babel/plugin-proposal-object-rest-spread", {
      "useBuiltIns": true
    }],
    "@babel/plugin-syntax-dynamic-import",
    "babel-plugin-lodash"
  ],
  "env": {
    "test": {
      "plugins": ["@babel/plugin-transform-modules-commonjs"]
    }
  }
}
